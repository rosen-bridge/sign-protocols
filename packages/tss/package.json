{
  "name": "@rosen-bridge/tss",
  "version": "4.0.0",
  "description": "TypeScript library for building and validating TSS signatures.",
  "repository": "https://github.com/rosen-bridge/sign-protocols",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "type": "module",
  "scripts": {
    "prettify": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint --fix . && npm run prettify",
    "build": "tsc --build tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "test": "NODE_OPTIONS=--loader=extensionless vitest",
    "coverage": "npm run test -- --coverage --run",
    "release": "npm run test -- --run && npm run build && npm publish --access public"
  },
  "files": [
    "dist"
  ],
  "author": "Rosen Team",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^20.11.9",
    "@types/secp256k1": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-istanbul": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "extensionless": "^1.9.6",
    "prettier": "^2.8.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [
    "rosen"
  ],
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.1",
    "@rosen-bridge/abstract-logger": "^1.0.0",
    "@rosen-bridge/communication": "^1.0.0",
    "@rosen-bridge/encryption": "^0.1.0",
    "@rosen-bridge/detection": "^1.0.0",
    "await-semaphore": "^0.1.3",
    "axios": "^1.4.0",
    "blakejs": "^1.2.1",
    "secp256k1": "^4.0.3"
  }
}
